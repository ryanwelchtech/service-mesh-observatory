apiVersion: v1
kind: Secret
metadata:
  name: observatory-secrets
  namespace: observatory
type: Opaque
stringData:
  database-url: "postgresql://observatory:CHANGE_ME@timescaledb:5432/observatory"
  secret-key: "CHANGE_ME_TO_RANDOM_SECRET_KEY"
  jwt-secret: "CHANGE_ME_TO_RANDOM_JWT_SECRET"

---
# Note: This is an example file. DO NOT commit actual secrets to git.
# Create the actual secrets.yaml from this template and add it to .gitignore
#
# To create secrets from this file:
# 1. Copy this file: cp secrets.yaml.example secrets.yaml
# 2. Replace all CHANGE_ME values with actual secrets
# 3. Apply: kubectl apply -f secrets.yaml
#
# Alternatively, use kubectl create secret:
# kubectl create secret generic observatory-secrets \
#   --from-literal=database-url='postgresql://user:pass@host:5432/db' \
#   --from-literal=secret-key='your-secret-key' \
#   --from-literal=jwt-secret='your-jwt-secret' \
#   -n observatory
